{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{textarea type="notes" value=notes class="notes"}}
      </div>

      <button class="btn btn-xs question-save" {{action 'saveQuestion' question}}>Save</button>
    </form>
  </div>
  {{else}}
  <button class= "btn btn-sm new-question"{{action 'questionFormShow'}}>New Question</button>
  {{/if}}
